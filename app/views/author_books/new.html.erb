<%= form_with url: "/authors/#{@author.id}/books", method: :post, local: true do |form| %>
  <p>Adding book to <%= @author.name %></p>
  <p><%= form.label "Title:" %>
    <%= form.text_field :name %></p>
  <p><%= form.label "Has Foreword?" %>
    <%= form.select :has_foreword, [true, false] %></p>
  <p><%= form.label "Pages:" %>
    <%= form.text_field :pages %></p>
  <%= form.submit "Add Book" %>
<% end %>
